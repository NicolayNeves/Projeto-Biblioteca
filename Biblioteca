public class Biblioteca
{
    public List<MaterialBiblioteca> Materiais { get; set; }
 
    public Biblioteca()
    {
        Materiais = new List<MaterialBiblioteca>();
    }
 
    // Método para adicionar material
    public void AdicionarMaterial(MaterialBiblioteca material)
    {
        Materiais.Add(material);
        Console.WriteLine($"Material {material.Titulo} adicionado com sucesso.");
    }
 
    // Método para listar todos os materiais
    public void ListarMateriais()
    {
        foreach (var material in Materiais)
        {
            material.ExibirInformacoes();
        }
    }
 
    // Método para buscar material pelo título
    public MaterialBiblioteca BuscarPorTitulo(string titulo)
    {
        var resultado = Materiais.FirstOrDefault(m => m.Titulo.Equals(titulo, StringComparison.OrdinalIgnoreCase));
        return resultado;
    }
 
    // Método para emprestar material
    public void EmprestarMaterial(string titulo)
    {
        var material = BuscarPorTitulo(titulo);
        if (material != null)
        {
            material.Emprestar();
        }
        else
        {
            Console.WriteLine($"Material com título {titulo} não encontrado.");
        }
    }
 
    // Método para devolver material
    public void DevolverMaterial(string titulo)
    {
        var material = BuscarPorTitulo(titulo);
        if (material != null)
        {
            material.Devolver();
        }
        else
        {
            Console.WriteLine($"Material com título {titulo} não encontrado.");
        }
    }
}
